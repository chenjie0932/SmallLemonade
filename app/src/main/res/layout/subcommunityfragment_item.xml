<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="250px"
                                    android:id="@+id/cardview_subcommunity"
                                    android:paddingLeft="@dimen/common_padding"
                                    android:paddingRight="@dimen/common_padding"
                                    app:cardCornerRadius="30px">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_subcommunity_title"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:paddingLeft="20px"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_subcommunity_content"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"/>

        <LinearLayout
            android:paddingLeft="20px"
            android:layout_width="match_parent"
            android:layout_height="70px"
            >

            <TextView
                android:id="@+id/tv_subcommunity_name"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"/>

            <TextView
                android:id="@+id/tv_subcommunity_createTime"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/tv_subcommunity_replyTimes"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/article_comment"
                android:gravity="center"
                android:text="2"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
